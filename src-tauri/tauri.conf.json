{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hackernews",
  "version": "0.1.0",
  "identifier": "com.hackernews.app",
  "build": {
    "beforeDevCommand": "dx serve --platform web",
    "devUrl": "http://localhost:8080",
    "beforeBuildCommand": "dx build --release",
    "frontendDist": "../target/dx/hackernews/release/web/public"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
